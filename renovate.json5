{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "labels": ["dependencies"],
  "timezone": "Europe/London",
  
  "docker-compose": {
    "enabled": true,
    "fileMatch": ["(^|/)docker-compose[^/]*\\.ya?ml$"]
  },

  "packageRules": [
    {
      "description": "Group all non-major updates together to reduce noise",
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "all non-major dependencies"
      // REMOVED: automerge for updates
    },
    {
      "description": "Automatically pin docker images that are currently using 'latest'",
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["pin", "digest"]
      // REMOVED: automerge for pinning (Now you must approve this too)
    },
    {
      "description": "STOP major updates for databases (prevents data format corruption)",
      "matchPackageNames": [
        "postgres", 
        "mariadb", 
        "mysql", 
        "mongo", 
        "redis", 
        "valkey",
        "getmeili/meilisearch"
      ],
      "separateMajorMinor": true,
      "major": {
        "enabled": false
      }
    }
  ],
  
  "pinDigests": true
}
