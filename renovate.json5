{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "dependencyDashboard": true,
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "dependencies"
  ],
  "timezone": "Europe/London",
  "docker-compose": {
    "enabled": true,
    "managerFilePatterns": [
      "/(^|/)docker-compose[^/]*\\.ya?ml$/"
    ]
  },
  "packageRules": [
    {
      "description": "Prevent qBittorrent from upgrading to v5 if you are holding it back (Optional - keep if you added this intentionally)",
      "matchPackageNames": ["ghcr.io/linuxserver/qbittorrent"],
      "allowedVersions": "< 20"
    },
    {
      "description": "STOP major updates for databases",
      "matchPackageNames": [
        "postgres",
        "mariadb",
        "mysql",
        "mongo",
        "redis",
        "valkey",
        "getmeili/meilisearch"
      ],
      "separateMajorMinor": true,
      "major": {
        "enabled": false
      }
    }
  ],
  "pinDigests": true
}
