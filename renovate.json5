{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "dependencyDashboard": true,
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "dependencies"
  ],
  "timezone": "Europe/London",
  "docker-compose": {
    "enabled": true,
    "managerFilePatterns": [
      "/(^|/)docker-compose[^/]*\\.ya?ml$/"
    ]
  },
  "packageRules": [
    {
      "description": "Group all non-major updates, PINS, and DIGESTS together",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "groupName": "all non-major dependencies"
    },
    {
      "description": "Ignore the ancient Ubuntu-versioned tag for qBittorrent",
      "matchPackageNames": [
        "ghcr.io/linuxserver/qbittorrent"
      ],
      "ignoreVersions": [
        "^20\\."
      ]
    },
    {
      "description": "STOP major updates for databases",
      "matchPackageNames": [
        "postgres",
        "mariadb",
        "mysql",
        "mongo",
        "redis",
        "valkey",
        "getmeili/meilisearch"
      ],
      "separateMajorMinor": true,
      "major": {
        "enabled": false
      }
    }
  ],
  "pinDigests": true
}
