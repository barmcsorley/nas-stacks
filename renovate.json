{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
    // REMOVED: ":disableDependencyDashboard" - You want this back!
  ],
  "labels": ["dependencies"],
  "timezone": "Europe/London",
  
  "docker-compose": {
    "enabled": true,
    "fileMatch": ["(^|/)docker-compose[^/]*\\.ya?ml$"]
  },

  "packageRules": [
    {
      "description": "Group all non-major updates together to reduce noise",
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "all non-major dependencies"
      // REMOVED: "automerge": true - Removed so you can manually check PRs again
    },
    {
      "description": "Automatically pin docker images that are currently using 'latest'",
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["pin", "digest"],
      "automerge": true
    },
    {
      "description": "STOP major updates for databases (prevents data format corruption)",
      "matchPackageNames": [
        "postgres", 
        "mariadb", 
        "mysql", 
        "mongo", 
        "redis", 
        "valkey",
        "getmeili/meilisearch"
      ],
      "separateMajorMinor": true,
      "major": {
        "enabled": false
      }
    }
  ],
  
  "pinDigests": true
}
